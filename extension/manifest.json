{
    "name": "Aya Assistant",
    "description": "AI ассистент для управления браузером",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_icon": "static/aya.png"
    },
    "side_panel": {
      "default_path": "chat.html"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "tabs",
      "sidePanel"
    ],
    "host_permissions": [
      "https://api.anthropic.com/*",
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
